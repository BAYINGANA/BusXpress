@page
@model BusManagement.Pages.Drivers.IndexModel
@{
    Layout = null;
    ViewData["Title"] = "Driver Dashboard";
}
@await Html.PartialAsync("DriverNavigation")

<h2>Welcome, Driver</h2>

<p>This is your dashboard:</p>
    <h4>User Details:</h4>
    <p><strong>Email:</strong> @User.Identity?.Name</p>
    <p><strong>Role:</strong> @User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</p>
    <p><strong>User ID:</strong> @User.FindFirst("UserId")?.Value</p>
<p>@DateTime.Now</p>
