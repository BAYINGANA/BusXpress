@page
@model BusManagement.Pages.Drivers.ScheduleModel
@{
    Layout = null;

    ViewData["Title"] = "Schedule";
}
@await Html.PartialAsync("DriverNavigation")

<h2>Your Schedule</h2>

@if (Model.DriverAssignments.Count == 0)
{
    <p>No assignments found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Assignment ID</th>
                <th>Bus Name</th>
                <th>Driver Name</th>
                <th>Assignment Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var assignment in Model.DriverAssignments)
            {
                <tr>
                    <td>@assignment.AssignmentId</td>
                    <td>@assignment.BusName</td>
                    <td>@assignment.DriverName</td>
                    <td>@assignment.AssignmentDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@assignment.Status</td>
                </tr>
            }
        </tbody>
    </table>
}