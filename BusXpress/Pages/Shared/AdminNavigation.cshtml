@{
    Layout = null;  // No layout for the partial view itself, it will be embedded into the page
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BusManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BusManagement.styles.css" asp-append-version="true" />
</head>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Admin Dashboard</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Admin/Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Admin/Buses/ManageBuses">Manage Buses</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Admin/Routes/ManageRoutes">Manage Routes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Admin/Schedules/ManageSchedules">Manage Schedules</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Admin/Tickets/ViewTickets">View Tickets</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Admin/AssignDrivers/ManageAssignDrivers">Assign Drivers</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Logout">Logout</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Make sure to include this style for the fixed navbar -->
<style>
    body {
        padding-top: 60px; /* Offset the body content to avoid being hidden behind the navbar */
    }
</style>
