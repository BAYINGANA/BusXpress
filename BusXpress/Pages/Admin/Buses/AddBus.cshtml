@page
@{
    Layout = null;  // Use the default layout for the page
}
@model BusXpress.Pages.Admin.Buses.AddBusModel

@{
    ViewData["Title"] = "Add Bus";
}

<!-- Render the Admin Navigation Bar -->
@await Html.PartialAsync("AdminNavigation")

<h2>Add Bus</h2>

<form method="post">
    <div class="form-group">
        <label for="BusNumber">Bus Number</label>
        <input type="text" class="form-control" id="BusNumber" name="BusNumber" asp-for="BusNumber" required />
    </div>

    <div class="form-group">
        <label for="Capacity">Capacity</label>
        <input type="number" class="form-control" id="Capacity" name="Capacity" asp-for="Capacity" required />
    </div>

    <div class="form-group">
        <label for="Model">Model</label>
        <input type="text" class="form-control" id="Model" name="Model" asp-for="Model" required />
    </div>

    <div class="form-group">
        <label for="Status">Status</label>
        <select class="form-control" id="Status" name="Status" asp-for="Status" required>
            <option value="Available">Available</option>
            <option value="Unavailable">Unavailable</option>
            <option value="In Service">In Service</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Add Bus</button>
</form>

