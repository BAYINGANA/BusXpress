@page
@model BusManagement.Pages.Admin.Routes.EditRouteModel
@{
    Layout = null;
    ViewData["Title"] = "Edit Route";
}
<!-- Admin Navigation -->
@await Html.PartialAsync("AdminNavigation")
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Bus Management</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS (optional if included globally) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background: #f9f9f9;
            color: #212529;
        }

        .container {
            max-width: 700px;
        }

        h2 {
            color: #0d6efd;
        }

        .form-control,
        .form-label {
            color: #212529;
        }

            .form-control:focus {
                border-color: #0d6efd;
                box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
            }

        .btn-primary {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

            .btn-primary:hover {
                background-color: #0b5ed7;
                border-color: #0a58ca;
            }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

            .btn-secondary:hover {
                background-color: #5c636a;
                border-color: #565e64;
            }

        .form-container {
            background-color: #ffffff;
            padding: 2rem;
            border-radius: 0.75rem;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
        }

        /* Dark Mode */
        body.dark-mode {
            background: linear-gradient(135deg, #283e51, #4b79a1);
            color: #f8f9fa;
        }

        .dark-mode .form-container {
            background-color: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .dark-mode .form-control {
            background-color: #2c2c2c;
            color: #f8f9fa;
            border: 1px solid #444;
        }

            .dark-mode .form-control:focus {
                border-color: #0d6efd;
                box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.4);
            }

        .dark-mode .form-label {
            color: #e9ecef;
        }

        .dark-mode .btn-primary,
        .dark-mode .btn-secondary {
            color: white;
        }
    </style>
</head>
<body>

    <div class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold">Edit Route</h2>
            <a href="/Admin/Routes/ManageRoutes" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle me-1"></i> Back to Routes
            </a>
        </div>

        <form method="post" class="form-container">
            <div class="mb-3">
                <label for="RouteId" class="form-label">Route ID</label>
                <input type="number" class="form-control" id="RouteId" name="RouteId" asp-for="RouteId" readonly required />
            </div>

            <div class="mb-3">
                <label for="Origin" class="form-label">Origin</label>
                <input type="text" class="form-control" id="Origin" name="Origin" asp-for="Origin" required />
            </div>

            <div class="mb-3">
                <label for="Destination" class="form-label">Destination</label>
                <input type="text" class="form-control" id="Destination" name="Destination" asp-for="Destination" required />
            </div>

            <div class="mb-3">
                <label for="Distance" class="form-label">Distance (km)</label>
                <input type="number" class="form-control" id="Distance" name="Distance" asp-for="Distance" required />
            </div>

            <div class="mb-3">
                <label for="Price" class="form-label">Price</label>
                <input type="number" class="form-control" id="Price" name="Price" asp-for="Price" required />
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="bi bi-pencil-square me-1"></i> Update Route
            </button>
        </form>
    </div>

    <!-- Optional Bootstrap JS (for responsive navbar or modal components) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
