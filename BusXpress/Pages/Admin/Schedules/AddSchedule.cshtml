@page
@model BusManagement.Pages.Admin.Schedules.AddScheduleModel
@{
    Layout = null;
    ViewData["Title"] = "Add New Schedule";
}
<!-- Admin Navigation -->
@await Html.PartialAsync("AdminNavigation")
<!-- Bootstrap Icons -->
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background: #f9f9f9;
            color: #212529;
        }

        .container {
            max-width: 700px;
        }

        h2 {
            color: #0d6efd;
        }

        .form-control,
        .form-group label {
            color: #212529;
        }

            .form-control:focus {
                border-color: #0d6efd;
                box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
            }

        .btn-primary {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

            .btn-primary:hover {
                background-color: #0b5ed7;
                border-color: #0a58ca;
            }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

            .btn-secondary:hover {
                background-color: #5c636a;
                border-color: #565e64;
            }

        /* Dark Mode Styles */
        body.dark-mode {
            background: linear-gradient(135deg, #283e51, #4b79a1);
            color: #f8f9fa;
        }

        .dark-mode .bg-light {
            background-color: rgba(255, 255, 255, 0.05)!important;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .dark-mode .form-control {
            background-color: #2c2c2c;
            color: #f8f9fa;
            border: 1px solid #444;
        }

            .dark-mode .form-control:focus {
                background-color: #2c2c2c;
                color: #f8f9fa;
                border-color: #0d6efd;
                box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.4);
            }

        .dark-mode .form-group label {
            color: #e9ecef;
        }

        .dark-mode .btn-primary {
            background-color: #0d6efd;
            border-color: #0d6efd;
            color: white;
        }

        .dark-mode .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            color: white;
        }
    </style>
</head>

<body> 
    <div class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold">Add New Schedule</h2>
            <a href="/Admin/Schedules/ManageSchedules" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle me-1"></i> Back to Schedules
            </a>
        </div>

        <!-- Schedule Form -->
        <form method="post" class="shadow-lg rounded-3 p-4 bg-light">
            <!-- Bus Selection -->
            <div class="form-group mb-3">
                <label for="BusId">Select Bus</label>
                <select id="BusId" name="BusId" class="form-control" required>
                    <option value="" disabled selected>Select a bus</option>
                    @foreach (var bus in Model.Buses)
                    {
                        <option value="@bus.BusId">@bus.BusNumber</option>
                    }
                </select>
            </div>

            <!-- Route Selection -->
            <div class="form-group mb-3">
                <label for="RouteId">Select Route</label>
                <select id="RouteId" name="RouteId" class="form-control" required>
                    <option value="" disabled selected>Select a route</option>
                    @foreach (var route in Model.Routes)
                    {
                        <option value="@route.RouteId">@route.Origin to @route.Destination</option>
                    }
                </select>
            </div>

            <!-- Departure Time -->
            <div class="form-group mb-3">
                <label for="DepartureTime">Departure Time</label>
                <input type="datetime-local" id="DepartureTime" name="DepartureTime" class="form-control" required />
                <span asp-validation-for="DepartureTime" class="text-danger"></span>
            </div>

            <!-- Arrival Time -->
            <div class="form-group mb-4">
                <label for="ArrivalTime">Arrival Time</label>
                <input type="datetime-local" id="ArrivalTime" name="ArrivalTime" class="form-control" required />
                <span asp-validation-for="ArrivalTime" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save me-1"></i> Save Schedule
            </button>
        </form>
    </div>

</body>