@page
@model BusManagement.Pages.Drivers.IndexModel
@{
    Layout = null;
    ViewData["Title"] = "Driver Dashboard";
}

@await Html.PartialAsync("DriverNavigation")

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <style>
        :root {
            --primary: #0d6efd;
            --bg-light: #f9f9f9;
            --bg-dark: linear-gradient(135deg, #1f2e3c, #3b5a7a);
            --card-dark: rgba(255, 255, 255, 0.05);
            --text-light: #212529;
            --text-dark: #e9ecef;
            --accent: #0d6efd;
            --hover-dark: rgba(255, 255, 255, 0.05);
        }

        body {
            background: var(--bg-light);
            color: var(--text-light);
            font-family: 'Segoe UI', sans-serif;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            body.dark-mode {
                background: var(--bg-dark);
                color: var(--text-dark);
            }

        .card {
            border-radius: 1rem;
            box-shadow: 0 0 10px rgba(0,0,0,0.05);
            transition: background-color 0.3s ease;
        }

        .dark-mode .card {
            background: var(--card-dark);
            box-shadow: 0 0 10px rgba(255,255,255,0.05);
            border: 1px solid rgba(255,255,255,0.1);
        }

        .dashboard-header {
            text-align: center;
            margin-bottom: 2rem;
        }

            .dashboard-header h2 {
                color: var(--primary);
                font-weight: bold;
            }

        .icon-box {
            font-size: 2rem;
            color: var(--primary);
            margin-bottom: 0.5rem;
        }

        .card-title {
            color: var(--primary);
        }

        .info-list p {
            margin-bottom: 0.6rem;
        }

        .schedule-preview {
            padding: 1rem 0.5rem;
            border-left: 4px solid var(--primary);
            background: rgba(13,110,253,0.05);
            border-radius: 0.5rem;
            margin-top: 1rem;
        }

        .dark-mode .schedule-preview {
            background: var(--hover-dark);
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }
    </style>
</head>
<body>

    <div class="container my-5 page-wrapper">

        <!-- Dashboard Title -->
        <div class="dashboard-header">
            <h2><i class="bi bi-speedometer2 me-2"></i>Driver Dashboard</h2>
            <p class="text-muted">Welcome back! Here's your activity overview.</p>
        </div>

        <!-- Metrics Cards -->
        <div class="row mb-5 text-center">
            <div class="col-md-6 mb-3">
                <div class="card py-4">
                    <div class="icon-box"><i class="fa-solid fa-bus"></i></div>
                    <h6>Assigned Buses</h6>
                    <h2>@Model.AssignedBusesCount</h2>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="card py-4">
                    <div class="icon-box"><i class="fa-solid fa-calendar-day"></i></div>
                    <h6>Today's Schedules</h6>
                    <h2>@Model.TodaySchedulesCount</h2>
                    @if (Model.TodaySchedulesCount > 0)
                    {
                        <div class="schedule-preview mt-3 text-start mx-3">
                            <p class="mb-1"><strong>Heads up:</strong> You have schedules today.</p>
                            <p class="mb-0 text-muted"><i class="fa-solid fa-clock me-1"></i>Don't forget to check your assigned routes.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- User Info Card -->
        <div class="card mx-auto" style="max-width: 700px;">
            <div class="card-body">
                <h4 class="card-title"><i class="bi bi-person-circle me-2"></i>User Details</h4>
                <div class="info-list">
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Role:</strong> @Model.Role</p>
                    <p><strong>User ID:</strong> @Model.UserId</p>
                    <p class="text-muted">
                        <small><i class="fa-regular fa-calendar-days me-1"></i> Current Date: @DateTime.Now.ToString("dddd, MMM dd yyyy")</small>
                    </p>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
